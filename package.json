{
  "name": "kanban_for_blitzjs",
  "version": "1.0.0",
  "scripts": {
    "dev": "blitz dev",
    "build": "blitz build",
    "start": "blitz start",
    "studio": "blitz prisma studio",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "husky install"
  },
  "prisma": {
    "schema": "db/schema.prisma"
  },
  "prettier": {
    "semi": false,
    "printWidth": 100
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "dependencies": {
    "@prisma/client": "2.30.0",
    "blitz": "0.39.0",
    "final-form": "4.20.2",
    "react": "alpha",
    "react-dom": "alpha",
    "react-final-form": "6.5.3",
    "zod": "3.8.1"
  },
  "devDependencies": {
    "@types/preview-email": "2.0.1",
    "@types/react": "17.0.19",
    "autoprefixer": "10.3.4",
    "eslint": "7.32.0",
    "husky": "6.0.0",
    "lint-staged": "10.5.4",
    "postcss": "8.3.6",
    "prettier": "2.3.2",
    "prettier-plugin-prisma": "0.15.0",
    "pretty-quick": "3.1.1",
    "preview-email": "3.0.5",
    "prisma": "2.30.0",
    "tailwindcss": "2.2.9",
    "typescript": "~4.3"
  },
  "private": true
